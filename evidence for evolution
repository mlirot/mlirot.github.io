    <script>
        const cards = ['welcome-card', 'fossils-card', 'anatomy-card', 'embryology-card', 'dna-card', 'resistance-card', 'final-card'];
        let currentCardIndex = 0;

        document.getElementById('start-button').addEventListener('click', () => {
            showNextCard();
        });

        document.getElementById('restart-button').addEventListener('click', () => {
            currentCardIndex = 0;
            showNextCard();
        });
        
        // This makes sure the first card is visible when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            showCard(currentCardIndex);
        });

        function showCard(index) {
            cards.forEach((cardId, i) => {
                const card = document.getElementById(cardId);
                if (i === index) {
                    card.classList.add('active');
                } else {
                    card.classList.remove('active');
                }
            });
        }

        function showNextCard() {
            currentCardIndex++;
            showCard(currentCardIndex);
        }

        function checkAnswer(topic, answerIndex) {
            let feedbackElement = document.getElementById(topic + '-feedback');
            let nextButton = document.getElementById(topic + '-next');
            let isCorrect = false;

            // Simple logic for which answer is correct
            if (topic === 'fossils' && answerIndex === 1) {
                isCorrect = true;
            } else if (topic === 'anatomy' && answerIndex === 1) {
                isCorrect = true;
            } else if (topic === 'embryology' && answerIndex === 2) {
                isCorrect = true;
            } else if (topic === 'dna' && answerIndex === 2) {
                isCorrect = true;
            } else if (topic === 'resistance' && answerIndex === 0) {
                isCorrect = true;
            }

            if (isCorrect) {
                feedbackElement.textContent = "Correct! You got it right!";
                feedbackElement.style.color = '#10b981';
                nextButton.style.display = 'block';
            } else {
                feedbackElement.textContent = "Oops, not quite. Try again!";
                feedbackElement.style.color = '#ef4444';
            }
        }
    </script>

</body>
